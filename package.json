{
    "name": "js-template-syntax-highlighting",
    "displayName": "js.template syntax highlighting",
    "description": "Syntax highlight support for .js-template files.",
    "version": "0.0.1",
    "publisher": "villematti",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:js-template"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            { 
                "id": "js-template",
                "aliases": [
                    "js-template"
                ],
                "extensions": [
                    ".js-template"
                ] 
            }
        ],
        "grammars": [
            {
                "language": "js-template",
                "scopeName": "text.js.js-template",
                "path": "./syntaxes/js-template.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.3",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
